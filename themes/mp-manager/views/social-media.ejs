<h1 class="section-heading">Social Media Updates</h1>
<form class="form-group	row" method="post" action="/mp-manager/settings/social-media" name="siteSettings" ng-controller="SiteSettings">
	<%	locals.socialMediaList.forEach(function(socialMediaInfo) {	%>
		<div class="form-group">
			<label class="col-md-3"><%=	socialMediaInfo.name	%></label>
			<div class="col-md-6">
				<input type="text" name="link[<%=	socialMediaInfo.name	%>]" placeholder="<%=	socialMediaInfo.name	%> URL" value="<%=	socialMediaInfo.url	%>" class="form-control" required />
			</div>
			<div class="clearfix"></div>
		</div>
	<%	});	%>
	
	<div class="form-group	col-md-12">
		<input type="submit" name="submit" value="Save" class="btn-info" />
	</div>
</form>